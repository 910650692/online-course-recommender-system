<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.osrs.dao.UserMapper">

    <resultMap id="BaseResultMap" type="com.osrs.entity.User">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="role" column="role" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,avatar,
        role
    </sql>
    <select id="selectByUsername" resultType="com.osrs.entity.User">
        select
        <include refid="Base_Column_List"/>
        from user where username = #{username}
    </select>

    <insert id="insertUser" parameterType="com.osrs.entity.User">
        insert into user(username,password)
        values(#{username},#{password})
    </insert>
</mapper>
